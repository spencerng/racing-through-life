<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:layout_height="match_parent"
    android:layout_width="match_parent"

    xmlns:android="http://schemas.android.com/apk/res/android">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/mainView">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Select a song to begin."
            android:textColor="#000000"
            android:textSize="16dp"
            android:id="@+id/songTitle"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="16dp"
            android:textColor="#000000"
            android:id="@+id/artist"
            android:layout_below="@id/songTitle"
            android:layout_centerHorizontal="true"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="16dp"
            android:textColor="#000000"
            android:id="@+id/album"
            android:layout_below="@id/artist"
            android:layout_centerHorizontal="true" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/album"
            android:id="@+id/playControls">



            <Button
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:id="@+id/backButton"
                android:background="@drawable/ic_baseline_skip_previous_24"
                android:layout_toLeftOf="@id/playButton"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"/>

            <Button
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:background="@drawable/ic_baseline_play_circle_filled_24"
                android:layout_centerHorizontal="true"
                android:id="@+id/playButton"/>

            <Button
                android:id="@+id/nextButton"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:background="@drawable/ic_baseline_skip_next_24"
                android:layout_toRightOf="@id/playButton"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"/>
        </RelativeLayout>


        <Button
            android:id="@+id/musicSelector"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/playControls"
            android:layout_centerHorizontal="true"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            android:background="#64B5F6"
            android:drawableStart="@drawable/ic_baseline_library_music_24"
            android:foregroundGravity="center"
            android:padding="10dp"
            android:text=" Select Music"
            android:textColor="#ffffff" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Your Physical Fingerprint"
            android:layout_below="@id/musicSelector"
            android:layout_centerInParent="true"
            android:id="@+id/fingerprintText"
            android:textColor="#000000"
            android:textSize="18dp"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="10dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Current Speed"
            android:layout_below="@id/fingerprintText"
            android:layout_centerInParent="true"
            android:id="@+id/currentSpeedDisplay"
            android:textColor="#555"
            android:textSize="15dp"
            android:layout_marginBottom="10dp"/>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/currentSpeedDisplay"
            android:layout_centerInParent="true"
            android:id="@+id/speedStepLayout">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="30dp"
                android:layout_centerInParent="true"
                android:layout_below="@id/musicSelector"
                android:id="@+id/speedLayout"
                android:gravity="center"
                android:orientation="vertical"
                >

                <Button
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="@drawable/ic_baseline_speed_24" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2.33"
                    android:id="@+id/speedView"
                    android:textColor="#000000"
                    android:layout_marginTop="5dp"
                    android:textAlignment="center"
                    android:textSize="20dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ft/s"
                    android:textColor="#000000"
                    android:textAlignment="center"
                    android:layout_below="@id/speedIcon"
                    android:textSize="16dp"/>
            </LinearLayout>

            <LinearLayout

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:gravity="center"
                android:orientation="vertical"
                >

                <Button
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="@drawable/ic_baseline_directions_walk_24" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2.3"
                    android:id="@+id/stepView"
                    android:textColor="#000000"
                    android:layout_marginTop="5dp"
                    android:textAlignment="center"
                    android:textSize="20dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="steps/min"
                    android:textColor="#000000"
                    android:textAlignment="center"
                    android:layout_below="@id/speedIcon"
                    android:textSize="16dp"/>
            </LinearLayout>


        </LinearLayout>

        <TextView
            android:layout_marginTop="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Today's Activity"
            android:layout_below="@id/speedStepLayout"
            android:layout_centerInParent="true"
            android:id="@+id/todaysActivityLabel"
            android:textColor="#555"
            android:textSize="15dp"
            android:layout_marginBottom="10dp"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/todaysActivityLabel"
            android:layout_centerInParent="true"
            >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="30dp"
                android:layout_centerInParent="true"

                android:gravity="center"
                android:orientation="vertical"
                >

                <Button
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="@drawable/ic_baseline_directions_run_24"
                    android:id="@+id/speedIcon"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Avg. moving pace"
                    android:textColor="#000000"
                    android:textAlignment="center"
                    android:layout_below="@id/speedIcon"
                    android:textSize="14dp"/>


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2.33"
                    android:id="@+id/dailyAvgSpeedView"
                    android:textColor="#000000"
                    android:layout_marginTop="5dp"
                    android:textAlignment="center"
                    android:layout_below="@id/speedIcon"
                    android:textSize="20dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="mph"
                    android:textColor="#000000"
                    android:textAlignment="center"
                    android:layout_below="@id/speedIcon"
                    android:textSize="14dp"/>
            </LinearLayout>

            <LinearLayout

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:gravity="center"
                android:orientation="vertical"
                >



                <Button
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="@drawable/ic_baseline_leaderboard_24" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="You are faster than"
                    android:textColor="#000000"
                    android:textAlignment="center"
                    android:layout_below="@id/speedIcon"
                    android:textSize="14dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="50%"
                    android:id="@+id/percentFasterView"
                    android:textColor="#000000"
                    android:layout_marginTop="5dp"
                    android:textAlignment="center"
                    android:textSize="20dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="of your friends"
                    android:textColor="#000000"
                    android:textAlignment="center"
                    android:layout_below="@id/speedIcon"
                    android:textSize="14dp"/>
            </LinearLayout>


        </LinearLayout>
        <TextView
            android:layout_below="@id/musicSelector"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="Accelerometer"
            android:visibility="invisible"
            android:layout_centerVertical="true"
            android:id="@+id/accel_display"
            android:textColor="#000000"
            />

        <TextView
            android:layout_below="@id/accel_display"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="Steps"
            android:layout_centerVertical="true"
            android:id="@+id/step_display"
            android:textColor="#000000"
            android:visibility="invisible"
            />


    </RelativeLayout>

</RelativeLayout>